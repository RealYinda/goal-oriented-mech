#ifndef included_Material
#define included_Material

#include "MaterialManager.h"
#include "Pointer.h"
#include "Array.h"
#include "BaseMaterial.h"
using namespace JAUMIN;

/**
 * @brief 该类是弹性力学计算的材料类, 提供材料的各种的属性.
 *
 */
class Material : public BaseMaterial<NDIM> {
public:
  /**
   * @brief 构造函数.
   *
   * @param name 材料名称.
   */
  Material(const string name);

  /**
   * @brief 析构函数.
   *
   */
  ~Material();

  /**
   * @brief 获取杨氏模量.
   *
   * @return 双精度浮点型, 杨氏模量.
   */
  double getYoungModulus();

  /**
   * @brief 获取波松比.
   *
   *
   * @return 双精度浮点型, 波松比.
   */
  double getPossionRatio();

  /**
   * @brief 获取密度.
   *
   *
   * @return 双精度浮点型, 密度.
   */
  double getDensity();

  /**
   * @brief 获取弹性矩阵.
   *
   * @return 二维双精度浮点型数组, 弹性矩阵数组.
   */
  tbox::Array<tbox::Array<double> > getModuli();

  /**
   * @brief 计算弹性刚度矩阵.
   *
   */
  void computeMuduli();

private:
  double d_young_modulus;
  double d_possion_ratio;
  double d_density;
  tbox::Array<tbox::Array<double> > d_moduli;
};

#endif
